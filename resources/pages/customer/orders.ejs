<main class="orders">
  <% if(orders.length > 0) { %>
    <section class="home__menu container px-2 md:mx-auto py-8">
        <h2 class="font-bold py-4">All Orders</h2>

        <% if(messages.success){ %>
          <div id="success-message" class="flex items-center bg-green-500 rounded text-white text-sm font-bold px-4 py-2 my-2" role="alert">
            <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z"/></svg>
            <p> <%= messages.success %> </p>
          </div>
        <%}%>
        

        <table class="table-fixed bg-white w-full">
            <thead>
              <tr>
                <th  class="w-1/2 text-justify pl-2">Order Id</th>
                <th class="w-1/3 text-justify pl-2">Address</th>
                <th class="w-1/3 text-justify pl-2">Total Price</th>
                <th class="w-1/3 text-justify pl-2">Payment Status</th>
                <th class="w-1/5 text-justify pl-2">Time</th>
                <th class="w-1/5 text-justify pl-2">---</th>
              </tr>
            </thead>
            <tbody>
              <% orders.map(order => { %>
                <tr>
                  <td class="border border-gray-300 py-2 px-3 orderId break-words text-sm"> 
                    #<%= order._id %> 
                  </td>
                  <td class="border border-gray-300 py-2 px-3 break-words text-sm"><%= order.address %></td>
                  <td class="border border-gray-300 py-2 px-3 break-words text-sm"> $<%= order.totalPrice %></td>
                  <td class="border border-gray-300 py-2 px-3 break-words text-sm"> <%= order.paymentStatus ? "Paid" : "Cash on delivery" %></td>
                  <td class="border border-gray-300 py-2 px-3 break-words text-sm"><%= new Date(order.createdAt).toLocaleTimeString() %></td>
                  <td class="border border-gray-300 py-2 px-3 break-words"> <a href="/customer/order/<%= order._id %>" class="text-sm text-blue-400 underline hover:no-underline"> View status </a> </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
      </section>
      <% }else{ %>
      <section class="flex flex-col items-center container mx-auto py-8">
        <h1 class="text-xl md:text-3xl">No Order ðŸ˜•</h1>
        <p class="text-center py-4 text-sm">
          <span> You haven't no order yet, </span> <br />
          <span> To order a pizza, go to the main page. </span>
        </p>
        <img
          class="w-4/5 md:w-1/3 py-4"
          src="/img/empty-box.png"
          alt="empty cart"
        />
        <a href="/" class="cart__back text-sm rounded-full py-2 px-8"> Go Back </a>
      </section>
      <% } %>
</main>