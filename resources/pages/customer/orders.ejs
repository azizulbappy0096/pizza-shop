<main class="orders">
  <% if(orders.length > 0) { %>
    <section class="home__menu container mx-2 md:mx-auto py-8">
        <h2 class="font-bold py-4">All Orders</h2>
        <table class="table-fixed bg-white w-full">
            <thead>
              <tr>
                <th  class="w-1/2 text-justify pl-2">Order Id</th>
                <th class="w-1/4 text-justify pl-2">Address</th>
                <th class="w-1/4 text-justify pl-2">Time</th>
              </tr>
            </thead>
            <tbody>
              <% orders.map(order => { %>
                <tr>
                  <td class="border border-gray-300 py-2 px-3 orderId break-words"> 
                    <a href="/"> <%= order._id %> </a>  
                  </td>
                  <td class="border border-gray-300 py-2 px-3 break-words"><%= order.address %></td>
                  <td class="border border-gray-300 py-2 px-3 break-words"><%= new Date(order.createdAt).toLocaleTimeString() %></td>
                </tr>
                <% }) %>
            </tbody>
          </table>
      </section>
      <% }else{ %>
      <section class="flex flex-col items-center container mx-auto py-8">
        <h1 class="text-xl md:text-3xl">No Order ðŸ˜•</h1>
        <p class="text-center py-4 text-sm">
          <span> You haven't no order yet, </span> <br />
          <span> To order a pizza, go to the main page. </span>
        </p>
        <img
          class="w-4/5 md:w-1/3 py-4"
          src="/img/empty-box.png"
          alt="empty cart"
        />
        <a href="/" class="cart__back text-sm rounded-full py-2 px-8"> Go Back </a>
      </section>
      <% } %>
</main>